<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jsi.izharhussain.downloadnow.HowtoActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar3_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:theme="?attr/actionBarTheme"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/toolbar3_cardview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/back2_imagebutton"
                android:src="@drawable/ic_arrow_back_black_24dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignLeft="@+id/apptitle_textview"
                android:visibility="visible" />

            <TextView
                android:id="@+id/apptitle_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/display3_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/toolbar3_cardview">

        <RelativeLayout
            android:id="@+id/display3_cardview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/howtoTitlesub"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/howtoTitlesub"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:text='1) Open Instagram.'
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/howtoTitlesub"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_row="1"
                    android:text="2) Tap 3 dots on the right top corner of the image."
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/howtoTitlesub"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_row="2"
                    android:text='3) Select "Copy Share URL" in the popup menu.'
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/howtoTitlesub"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_row="3"
                    android:text='4) Launch this app.'
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/howtoTitlesub"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:layout_row="4"
                    android:text='5) Tap download Button.'
                    android:textAlignment="viewStart"
                    android:textSize="24sp" />

            </GridLayout>

            <TextView
                android:id="@+id/howtoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="How to?"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/howtoTitlesub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/howtoTitle"
                android:text="Instruction on how to copy Instagram URL! and Use this app."
                android:textAlignment="center"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>